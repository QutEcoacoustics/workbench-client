{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "workbench-client": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "style": "scss"
        }
      },
      "root": "",
      "sourceRoot": "src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular/build:application",
          "defaultConfiguration": "development",
          "options": {
            "outputPath": {
              "base": "dist/workbench-client"
            },
            "index": "src/index.html",
            "polyfills": [
              "src/polyfills.ts"
            ],
            "tsConfig": "tsconfig.app.json",
            "aot": false,
            "optimization": false,
            "assets": [
              "src/favicon.ico",
              "src/assets",
              "src/manifest.json",
              {
                "glob": "**/*",
                "input": "node_modules/@googlemaps/markerclusterer/dist/",
                "output": "@googlemaps/markerclusterer/dist/"
              },
              {
                "glob": "**/*",
                "input": "node_modules/@ecoacoustics/web-components/dist/assets",
                "output": "assets/"
              }
            ],
            "styles": [
              "src/styles.scss"
            ],
            "stylePreprocessorOptions": {
              "includePaths": [
                "src/app/styles",
                "node_modules"
              ]
            },
            "sourceMap": true,
            "allowedCommonJsDependencies": [
              "zone.js/dist/zone-error",
              "humanize-duration",
              "buffer"
            ],
            "browser": "src/main.ts",
            "server": "src/main.server.ts",
            "ssr": {
              "entry": "src/server.ts"
            },
            "outputMode": "server"
          },
          "configurations": {
            "production": {
              "aot": true,
              "fileReplacements": [
                {
                  "replace": "src/environments/environment.ts",
                  "with": "src/environments/environment.prod.ts"
                }
              ],
              "optimization": true,
              "outputHashing": "all",
              "sourceMap": false,
              "extractLicenses": true,
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "2.5mb",
                  "maximumError": "7.74mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "6kb"
                }
              ]
            },
            "development": {
              "optimization": false,
              "outputHashing": "all",
              "sourceMap": true,
              "extractLicenses": true
            }
          }
        },
        "serve": {
          "builder": "@angular/build:dev-server",
          "options": {
            "buildTarget": "workbench-client:build",
            "headers": {
              "Cross-Origin-Opener-Policy": "same-origin",
              "Cross-Origin-Embedder-Policy": "require-corp",
              "Cross-Origin-Resource-Policy": "cross-origin",
              "Access-Control-Allow-Origin": "*"
            }
          },
          "configurations": {
            "production": {
              "buildTarget": "workbench-client:build:production"
            },
            "development": {
              "host": "development.ecosounds.org",
              "port": 4200
            }
          }
        },
        "test": {
          "builder": "@angular/build:karma",
          "options": {
            "codeCoverage": true,
            "sourceMap": false,
            "main": "src/test.ts",
            "polyfills": [
              "src/polyfills.ts",
              "zone.js/testing"
            ],
            "tsConfig": "tsconfig.spec.json",
            "aot": false,
            "karmaConfig": "karma.conf.js",
            "assets": [
              "src/favicon.ico",
              "src/assets",
              "src/manifest.json",
              {
                "glob": "**/*",
                "input": "node_modules/@ecoacoustics/web-components/",
                "output": "base/node_modules/@ecoacoustics/web-components/"
              }
            ],
            "styles": [
              "src/styles.scss"
            ],
            "stylePreprocessorOptions": {
              "includePaths": [
                "src/app/styles",
                "node_modules"
              ]
            },
            "scripts": []
          }
        },
        "lint": {
          "builder": "@angular-eslint/builder:lint",
          "options": {
            "lintFilePatterns": [
              "src/**/*.ts",
              "src/**/*.html"
            ],
            "ignorePath": "./.eslintignore",
            "eslintConfig": "./.eslintrc.json"
          }
        }
      }
    },
    "web-components": {
      "projectType": "library",
      "root": "projects/web-components",
      "sourceRoot": "projects/web-components/src",
      "prefix": "lib",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:ng-packagr",
          "options": {
            "project": "projects/web-components/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "projects/web-components/tsconfig.lib.json"
            },
            "development": {
              "tsConfig": "projects/web-components/tsconfig.lib.json"
            }
          }
        }
      }
    }
  },
  "cli": {
    "analytics": false
  },
  "schematics": {
    "@angular-eslint/schematics:application": {
      "setParserOptionsProject": true
    },
    "@angular-eslint/schematics:library": {
      "setParserOptionsProject": true
    }
  }
}
