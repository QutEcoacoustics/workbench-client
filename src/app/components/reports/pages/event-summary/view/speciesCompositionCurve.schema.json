{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "height": "container",
  "data": {
    "values": []
  },
  "config": {
    "customFormatTypes": true
  },
  "mark": "area",
  "selection": {
    "hover": {
      "type": "single",
      "on": "mouseover",
      "empty": "none"
    }
  },
  "transform": [
    {
      "calculate": "format(datum.ratio, '.2f')",
      "as": "formatted_ratio"
    },
    {
      "calculate": "customFormatter(datum.tagId)",
      "as": "formatted_tagId"
    }
  ],
  "encoding": {
    "x": {
      "field": "date",
      "title": "Date",
      "type": "nominal",
      "axis": {
        "labelAngle": 45,
        "title": null
      }
    },
    "y": {
      "title": "Ratio",
      "aggregate": "sum",
      "field": "ratio",
      "type": "quantitative",
      "axis": {
        "labelAngle": 45
      }
    },
    "color": {
      "field": "tagId",
      "type": "nominal",
      "scale": {
        "scheme": "category10"
      },
      "legend": {
        "orient": "top",
        "format": "number",
        "formatType": "customFormatter",
        "labelFontSize": 14
      }
    },
    "opacity": {
      "condition": {"selection": "hover", "value": 0.85},
      "value": 1
    },
    "tooltip": [
      {"field": "date", "title": "Date"},
      {"field": "formatted_tagId", "title": "Event"},
      {"field": "formatted_ratio", "title": "Ratio"}
    ]
  }
}
