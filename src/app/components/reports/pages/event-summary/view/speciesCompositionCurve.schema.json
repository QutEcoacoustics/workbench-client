{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "height": "container",
  "data": {
    "values": []
  },
  "config": {
    "customFormatTypes": true
  },
  "mark": "area",
  "selection": {
    "hover": {
      "type": "single",
      "on": "mouseover",
      "empty": "none"
    }
  },
  "transform": [
    {
      "calculate": "format(datum.ratio, '.2f')",
      "as": "formatted_ratio"
    },
    {
      "calculate": "customFormatter(datum.tagId)",
      "as": "formatted_tagId"
    }
  ],
  "encoding": {
    "x": {
      "field": "date",
      "title": "Date",
      "type": "temporal",
      "timeUnit": "yearmonthdate",
      "axis": {
        "labelAngle": 45,
        "labelFontSize": 12,
        "grid": true,
        "title": null,
        "format": "%Y-%m-%d",
        "zindex": 1
      },
      "scale": {
        "padding": 0
      }
    },
    "y": {
      "title": "Ratio",
      "aggregate": "sum",
      "field": "ratio",
      "type": "quantitative",
      "axis": {
        "labelFontSize": 12
      }
    },
    "color": {
      "field": "tagId",
      "type": "nominal",
      "scale": {
        "scheme": "category10"
      },
      "legend": {
        "orient": "top",
        "formatType": "customFormatter",
        "labelFontSize": 14,
        "title": "Events",
        "titleFontSize": 16,
        "titleFontWeight": "normal"
      }
    },
    "opacity": {
      "condition": {"selection": "hover", "value": 0.85},
      "value": 1
    },
    "tooltip": [
      {
        "type": "temporal",
        "field": "date",
        "title": "Date",
        "format": "%Y-%m-%d"
      },
      {"field": "formatted_tagId", "title": "Event"},
      {"field": "formatted_ratio", "title": "Ratio"}
    ]
  }
}
