{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "datasets": {},
  "params": [
    { "name": "bawFontSize", "value": 16 }
  ],
  "resolve": {
    "scale": {
      "x": "shared"
    }
  },
  "data": {
    "name": "recordingCoverage"
  },
  "vconcat": [
    {
      "title": {
        "text": "Audio Recording Coverage",
        "anchor": "start",
        "fontWeight": "normal",
        "fontSize": {
          "expr": "bawFontSize"
        }
      },
      "width": "container",
      "height": 50,
      "mark": "bar",
      "encoding": {
        "x": {
          "field": "startDate",
          "type": "temporal",
          "timeUnit": "yearmonthdate",
          "axis": {
            "title": null,
            "labels": false,
            "ticks": false,
            "domain": false,
            "grid": true,
            "tickCount": {
              "interval": "month",
              "step": 1
            }
          }
        },
        "x2": {
          "field": "endDate"
        },
        "color": {
          "value": "var(--baw-primary)"
        },
        "tooltip": [
          {
            "type": "temporal",
            "field": "startDate",
            "title": "Recording Start Date",
            "format": "%Y-%m-%d"
          },
          {
            "type": "temporal",
            "field": "endDate",
            "title": "Recording End Date",
            "format": "%Y-%m-%d"
          }
        ]
      }
    },
    {
      "title": {
        "text": "Analysis Coverage",
        "anchor": "start",
        "fontWeight": "normal",
        "fontSize": {
          "expr": "bawFontSize"
        }
      },
      "width": "container",
      "height": 50,
      "layer": [
        {
          "mark": "bar",
          "encoding": {
            "x": {
              "field": "startDate",
              "type": "temporal",
              "timeUnit": "yearmonthdate",
              "axis": {
                "labelAngle": 45,
                "title": null,
                "grid": true,
                "format": "%Y-%m-%d",
                "tickCount": {
                  "interval": "month",
                  "step": 1
                },
                "labelFontSize": {
                  "expr": "bawFontSize"
                }
              },
              "scale": {
                "padding": 0
              }
            },
            "x2": {
              "field": "endDate"
            },
            "color": {
              "value": "var(--baw-warning)"
            }
          }
        },
        {
          "data": {
            "name": "analysisCoverage"
          },
          "mark": "bar",
          "encoding": {
            "x": {
              "field": "startDate",
              "type": "temporal",
              "timeUnit": "yearmonthdate"
            },
            "x2": {
              "field": "endDate"
            },
            "color": {
              "value": "var(--baw-success)"
            },
            "tooltip": [
              {
                "type": "temporal",
                "field": "startDate",
                "title": "Analysis Start Date",
                "format": "%Y-%m-%d"
              },
              {
                "type": "temporal",
                "field": "endDate",
                "title": "Analysis End Date",
                "format": "%Y-%m-%d"
              }
            ]
          }
        }
      ]
    }
  ]
}
