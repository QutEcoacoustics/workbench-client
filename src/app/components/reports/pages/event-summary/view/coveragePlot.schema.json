{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "datasets": {},
  "resolve": {
    "scale": {
      "x": "shared"
    }
  },
  "data": {
    "name": "recordingCoverage"
  },
  "vconcat": [
    {
      "title": {
        "text": "Audio Recording Coverage",
        "anchor": "start",
        "fontSize": 16,
        "fontWeight": "normal"
      },
      "width": "container",
      "height": 50,
      "mark": "bar",
      "encoding": {
        "x": {
          "field": "startDate",
          "type": "temporal",
          "axis": {
            "title": null,
            "labels": false,
            "ticks": false,
            "grid": true,
            "domain": false
          }
        },
        "x2": {
          "field": "endDate"
        },
        "color": {
          "value": "var(--baw-primary)"
        },
        "tooltip": [
          {
            "type": "temporal",
            "field": "startDate",
            "title": "Recording Start Date",
            "format": "%Y-%m-%d"
          },
          {
            "type": "temporal",
            "field": "endDate",
            "title": "Recording End Date",
            "format": "%Y-%m-%d"
          }
        ]
      }
    },
    {
      "title": {
        "text": "Analysis Coverage",
        "anchor": "start",
        "fontSize": 16,
        "fontWeight": "normal"
      },
      "width": "container",
      "height": 50,
      "layer": [
        {
          "mark": "bar",
          "encoding": {
            "x": {
              "field": "startDate",
              "type": "temporal",
              "axis": {
                "labelAngle": 45,
                "labelFontSize": 12,
                "title": null,
                "grid": true,
                "tickCount": {
                  "interval": "month"
                },
                "format": "%b %Y"
              },
              "scale": {
                "padding": 0,
                "paddingInner": 1
              }
            },
            "x2": {
              "field": "endDate"
            },
            "color": {
              "value": "var(--baw-warning)"
            }
          }
        },
        {
          "data": {
            "name": "analysisCoverage"
          },
          "mark": "bar",
          "encoding": {
            "x": {
              "field": "startDate",
              "type": "temporal"
            },
            "x2": {
              "field": "endDate"
            },
            "color": {
              "value": "var(--baw-success)"
            },
            "tooltip": [
              {
                "type": "temporal",
                "field": "startDate",
                "title": "Analysis Start Date",
                "format": "%Y-%m-%d"
              },
              {
                "type": "temporal",
                "field": "endDate",
                "title": "Analysis End Date",
                "format": "%Y-%m-%d"
              }
            ]
          }
        }
      ]
    }
  ]
}
