{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "height": "container",
  "data": {
    "values": []
  },
  "transform": [
    {
      "calculate": "datum.count - datum.error",
      "as": "count_subtract_error"
    }
  ],
  "params": [
    { "name": "bawTitleSize", "value": 20 },
    { "name": "bawFontSize", "value": 18 }
  ],
  "layer": [
    {
      "mark": {
        "type": "errorband",
        "interpolate": "linear",
        "color": "black",
        "opacity": 0.1,
        "tension": 1
      },
      "encoding": {
        "x": {
          "field": "date",
          "type": "temporal",
          "timeUnit": "yearmonthdate",
          "axis": {
            "labelAngle": 45,
            "title": null,
            "grid": false,
            "format": "%Y-%m-%d",
            "tickCount": {
              "interval": "day",
              "step": 1
            },
            "labelFontSize": {
              "expr": "bawFontSize"
            }
          },
          "scale": {
            "padding": 0
          }
        },
        "y": {
          "title": "Count",
          "field": "count_subtract_error",
          "type": "quantitative"
        },
        "y2": {
          "field": "count"
        },
        "tooltip": [
          {
            "field": "date",
            "type": "temporal",
            "title": "Date",
            "format": "%Y-%m-%d"
          },
          {
            "field": "count",
            "type": "quantitative",
            "title": "Count"
          },
          {
            "field": "error",
            "type": "quantitative",
            "title": "Error"
          },
          {
            "title": "Count - Error",
            "type": "quantitative",
            "field": "count_subtract_error"
          }
        ]
      }
    },
    {
      "mark": {
        "type": "line",
        "interpolate": "linear"
      },
      "encoding": {
        "x": {
          "field": "date",
          "type": "temporal",
          "timeUnit": "yearmonthdate",
          "axis": {
            "title": null
          }
        },
        "y": {
          "title": "Count",
          "field": "count",
          "type": "quantitative",
          "axis": {
            "titleFontSize": {
              "expr": "bawTitleSize"
            },
            "labelFontSize": {
              "expr": "bawFontSize"
            }
          }
        }
      }
    },
    {
      "mark": {
        "type": "point",
        "filled": true,
        "color": "black"
      },
      "encoding": {
        "x": {
          "title": "Date",
          "field": "date",
          "type": "temporal",
          "timeUnit": "yearmonthdate"
        },
        "y": {
          "title": "Count",
          "field": "count",
          "type": "quantitative"
        },
        "tooltip": [
          {
            "field": "date",
            "type": "temporal",
            "title": "Date",
            "format": "%Y-%m-%d"
          },
          {
            "field": "count",
            "type": "quantitative",
            "title": "Count"
          },
          {
            "field": "error",
            "type": "quantitative",
            "title": "Error"
          },
          {
            "title": "Count - Error",
            "type": "quantitative",
            "field": "count_subtract_error"
          }
        ]
      }
    }
  ]
}
