{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "height": "container",
  "data": {
    "values": []
  },
  "config": {
    "tooltip": {
      "fontSize": 42
    }
  },
  "transform": [
    {
      "calculate": "datum.count + datum.error",
      "as": "count_plus_error"
    }
  ],
  "layer": [
    {
      "mark": {
        "type": "point",
        "filled": true,
        "color": "black"
      },
      "encoding": {
        "x": {
          "title": "Date",
          "field": "date",
          "type": "nominal",
          "axis": {
            "labelAngle": 45,
            "title": null
          }
        },
        "y": {
          "title": "Count",
          "field": "count",
          "type": "quantitative",
          "axis": {
            "labelAngle": 0
          }
        }
      }
    },
    {
      "mark": {
        "type": "errorband",
        "interpolate": "monotone",
        "color": "black",
        "opacity": 0.1,
        "tension": 0.5
      },
      "encoding": {
        "x": {
          "field": "date",
          "type": "nominal"
        },
        "y": {
          "title": "Count",
          "field": "count",
          "type": "quantitative"
        },
        "yError": {
          "field": "error"
        },
        "tooltip": [
          {
            "field": "date",
            "type": "nominal",
            "title": "Date"
          },
          {
            "field": "count",
            "type": "quantitative",
            "title": "Count"
          },
          {
            "field": "error",
            "type": "quantitative",
            "title": "Error"
          },
          {
            "title": "Count + Error",
            "type": "quantitative",
            "field": "count_plus_error"
          }
        ]
      }
    },
    {
      "mark": {
        "type": "line",
        "interpolate": "monotone"
      },
      "encoding": {
        "x": {
          "field": "date",
          "type": "nominal",
          "axis": {
            "labelAngle": 45,
            "title": null
          }
        },
        "y": {
          "title": "Count",
          "field": "count",
          "type": "quantitative",
          "axis": {
            "labelAngle": 0
          }
        }
      }
    }
  ]
}
