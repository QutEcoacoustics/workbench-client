{
  "model": {
    "username": "",
    "email": "",
    "password": "",
    "passwordConf": ""
  },
  "fields": [
    {
      "key": "register",
      "validators": {
        "fieldMatch": {
          "expression": "return (control.value.passwordConfirm === control.value.password || (!control.value.passwordConfirm || !control.value.password))",
          "message": "Passwords do not match",
          "errorPath": "passwordConfirm"
        }
      },
      "fieldGroup": [
        {
          "key": "username",
          "type": "input",
          "templateOptions": {
            "label": "Username",
            "required": true
          }
        },
        {
          "key": "email",
          "type": "input",
          "templateOptions": {
            "label": "Email",
            "required": true
          }
        },
        {
          "key": "password",
          "type": "input",
          "templateOptions": {
            "type": "password",
            "label": "Password",
            "minLength": 6,
            "required": true
          }
        },
        {
          "key": "passwordConfirm",
          "type": "input",
          "templateOptions": {
            "type": "password",
            "label": "Password Confirmation",
            "minLength": 6,
            "required": true
          },
          "expressionProperties": {
            "templateOptions.disabled": "!model.password"
          }
        }
      ]
    }
  ]
}
