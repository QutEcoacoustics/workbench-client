/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "compileOnSave": false,
  "compilerOptions": {
    "alwaysStrict": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "declaration": false,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "lib": [
      "ESNext",
      "dom",
      "dom.iterable"
    ],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": false,
    "outDir": "./dist/out-tsc",
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": false,
    "skipLibCheck": true,
    "target": "esnext",
    "types": [
      "@types/gtag.js",

      // TODO: This is a hack to get VsCode to recognize that jasmine is
      // globally imported in test contexts.
      //
      // This was previously not needed because the jasmine types were globally
      // imported through a convoluted tsconfig resolution.
      // I have made it more explicit that jasmine is a global import so that
      // we know that this hack exists.
      "jasmine"
    ],
    "paths": {
      "@assets/*": [
        "./src/assets/*"
      ],
      "@menu/*": [
        "./src/app/components/shared/menu/widgets/*",
        "./src/app/components/shared/menu/*"
      ],
      "@shared/*": [
        "./src/app/components/shared/*"
      ],
      "@components/*": [
        "./src/app/components/*"
      ],
      "@directives/*": [
        "./src/app/directives/*"
      ],
      "@pipes/*": [
        "./src/app/pipes/*"
      ],
      "@guards/*": [
        "./src/app/guards/*"
      ],
      "@helpers/*": [
        "./src/app/helpers/*"
      ],
      "@interfaces/*": [
        "./src/app/interfaces/*"
      ],
      "@models/*": [
        "./src/app/models/*"
      ],
      "@baw-api/*": [
        "./src/app/services/baw-api/*"
      ],
      "@services/*": [
        "./src/app/services/*"
      ],
      "@test/*": [
        "./src/app/test/*"
      ]
    },
    "useDefineForClassFields": false
  },
  "angularCompilerOptions": {
    "disableTypeScriptVersionCheck": true,
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  }
}
