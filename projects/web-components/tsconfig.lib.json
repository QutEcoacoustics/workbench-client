/* To learn more about Typescript configuration file: https://www.typescriptlang.org/docs/handbook/tsconfig-json.html. */
/* To learn more about Angular compiler options: https://angular.dev/reference/configs/angular-compiler-options. */
{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/web-components/@types",
    "declaration": true,
    "declarationMap": true,
    "inlineSources": true,
    "types": [
      "@types/gtag.js",
    ]
  },
  "angularCompilerOptions": {
    // We use "full" compilation mode because we pre-link the library during
    // build meaning that we don't need to support different Angular version
    // that the consumer app uses.
    "compilationMode": "full",
    "enableIvy": true
  },
  "files": [
    "src/public-api.ts",
    "../../src/polyfills.ts",
  ]
}
