/* To learn more about Typescript configuration file: https://www.typescriptlang.org/docs/handbook/tsconfig-json.html. */
/* To learn more about Angular compiler options: https://angular.dev/reference/configs/angular-compiler-options. */
{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "../../dist/web-components/@types",
    "declaration": true,
    "declarationMap": true,
    "inlineSources": true,
    "types": [
      "@types/gtag.js",
    ],
    "paths": {
      "@assets/*": ["./dist/workbench-client/assets/*"],
      "@shared/*": ["./dist/workbench-client/components/shared/*"],
      "@components/*": ["./dist/workbench-client/components/shared/*"],
      "@directives/*": ["./dist/workbench-client/directives/*"],
      "@pipes/*": ["./dist/workbench-client/pipes/*"],
      "@guards/*": ["./dist/workbench-client/guards/*"],
      "@helpers/*": ["./dist/workbench-client/helpers/*"],
      "@interfaces/*": ["./dist/workbench-client/interfaces/*"],
      "@models/*": ["./dist/workbench-client/models/*"],
      "@baw-api/*": ["./dist/workbench-client/services/baw-api/*"],
      "@services/*": ["./dist/workbench-client/services/*"],
      "@test/*": ["./dist/workbench-client/test/*"]
      // "@menu/*": [
      //   "./dist/workbench-client/components/shared/menu/widgets/*",
      //   "./dist/workbench-client/components/shared/menu/*"
      // ],
    }
  },
  "angularCompilerOptions": {
    // We use "full" compilation mode because we pre-link the library during
    // build meaning that we don't need to support different Angular version
    // that the consumer app uses.
    "compilationMode": "full",
    "enableIvy": true
  }
}
